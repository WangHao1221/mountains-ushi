/* pages/shanpin/shanpin.wxss */
.page__bd{
  height: 110rpx;
}
.container{
  height: calc(100% - 110rpx);
  overflow: hidden;
}
.nav_left,
.nav_right{
  width: 25%;
  height: calc(100% - 110rpx);
  background: #f5f5f5;  
  text-align: center;
  position: fixed;
  left: 0;
}
.nav_left_items{
  height: 90rpx;  
  padding: 12rpx 0;  
  border-bottom: 1px solid #dedede;  
  font-size: 28rpx; 
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav_left_items.active{
  background: #fff;  
  color: #f00; 
  border-left: 3px solid rgb(209, 80, 80);
  font-size: 32rpx;
}
.nav_right{
  left: 25%;
  width: 75%;
  background: #fff; 
}
.scroll_content .title{
  padding-left: 10rpx;
  text-align: left;
}
.scroll_content{
  height: 100%;
}
.nav_right_items{
  display: flex;
  align-items: center;
  height: 200rpx;
  padding: 20rpx;
}
.position_hasshop_img{
  height: 100%;
}
.nav_right_items .shop_img{
  width: 180rpx;  
  height: 200rpx; 
}
.menu_right_txt{
  box-sizing: border-box;
  padding-left: 10rpx;
  width: calc(100% - 180rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.menu_right_down{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.menu_right_name,
.menu_right_nprice_text{
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis; 
  line-height: 30px; 
  color: #333;
}
.nav_right_items .menu_right_nprice{
  color: #f5b14beb;
  font-size: 24rpx;
}
.nav_right_items .menu_right_nprice_text{
  font-size: 30rpx;
  color: #f5b14beb;
}
.btn_addCart{
  width: 70rpx;
  height: 70rpx;
}